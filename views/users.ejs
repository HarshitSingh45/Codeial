    <link rel="stylesheet" href="/css/user.css">

    <h1>User Page</h1>
    <img src="<%= user.avatar %>" alt="<%= user.name %>" width="100">
    <% if(locals.user.id == profile_user.id){ %>
        <form action="/users/update/<%= profile_user.id %>" method="post" enctype="multipart/form-data" >
            <input type="text" name="name" placeholder="Enter your name here..." required value="<%= profile_user.name %>">
            <input type="email" name="email" placeholder="Enter email-id" required value="<%= profile_user.email %>">
            <input type="file" id="file-ip-1" name="avatar" placeholder="Profile Picture" onchange="showPreview(event);">
            <input type="submit" value="Update">
        </form>
    <% }else{ %>
        <p><%= profile_user.name %></p>
        <p><%= profile_user.email %></p>
        <a href = '/addFriend/friend/<%= profile_user.id %>'>Add friend</a>
    <% } %>
    <div>
        <img id="file-ip-1-preview" alt="">
    </div>
    <script src="/scripts/profilePage.js"></script>
    